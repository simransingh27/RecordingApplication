@model IEnumerable<IQA_RecordingApplication.Models.CreateErrorMessageViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                <h5>Error Message Id </h5>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ErrorMessageId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ErrorMessageId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
               
               
               
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ErrorMessageId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ErrorMessageId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ErrorMessageId" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#tblData').DataTable();
        });
    </script>
}

@model IQA_RecordingApplication.Models.ProductTypeViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>


<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductTypeName" class="control-label">Product Type</label>
                <input asp-for="ProductTypeName" class="form-control" />
                <span asp-validation-for="ProductTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductTypeDescription" class="control-label">Product Type Description</label>
                <input asp-for="ProductTypeDescription" class="form-control" />
                <span asp-validation-for="ProductTypeDescription" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-block" /> <a class="btn btn-outline-secondary btn-block" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
